# ============================================
# PrintHub Backend Environment Configuration
# Copy this file to .env and fill in your values
# ============================================

# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/printhub

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRE=7d

# Razorpay Payment Gateway
# Get these from: https://dashboard.razorpay.com → Settings → API Keys
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret
# Get webhook secret from: Settings → Webhooks → Your Webhook
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret

# Cloudinary Storage
# Get these from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
